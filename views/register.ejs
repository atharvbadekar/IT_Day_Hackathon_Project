<%- include('partials/header') %>
<div class="container mt-5 reg-box" >

  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
 
   

          <!-- Makes POST request to /register route -->
          <form style="width: 350px;" action="/register" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="name" class="form-control" name="name">
              </div>

              <div class="form-group">
                <label for="surname">Surname</label>
                <input type="surname" class="form-control" name="surname">
              </div>
              
              <div class="form-group">
                <select name="userType">
                    <option value="volunteer">Select User Type</option>
                    <option value="organization">Organization</option>
                    <option value="donor">Donor</option>
                    <option value="hotel">Hotel</option>
                    <option value="customer">Customer</option>
                    <option value="animal-shelter">Animal Shelter</option>
                  </select>
              </div>

              

            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark btn2">Register</button>
            <p>If Already User<a href="/login">Login</a></p>
          </form>

      
     
    </div>

